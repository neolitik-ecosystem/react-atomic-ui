{
  "name": "react-atomic-ui",
  "version": "0.1.0",
  "description": "Lightweight React library based on Atomic design concept",
  "main": "build/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "babel lib -d build --ignore 'stories.js,test.js'",
    "build:watch": "babel lib -w -d build",
    "lint": "eslint lib/**",
    "lint:watch": "esw -w lib/**",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "review": "run-s lint test:clean test test:coverage:report",
    "test": "jest",
    "test:clean": "rimraf ./coverage",
    "test:watch": "jest --watch",
    "test:watchAll": "jest --watchAll",
    "test:coverage:report": "open ./coverage/lcov-report/index.html",
    "storybook": "start-storybook -p 9001 -s public",
    "build-storybook": "build-storybook -s public",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "author":
    "David Ouanounou <david@ouanounou.fr> (https://github.com/davidouanounou)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neolitik-ecosystem/react-atomic-ui.git"
  },
  "bugs": {
    "url": "https://github.com/neolitik-ecosystem/react-atomic-ui.git/issues"
  },
  "homepage":
    "https://github.com/neolitik-ecosystem/react-atomic-ui.git#readme",
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.11",
    "@storybook/addon-info": "^3.3.11",
    "@storybook/addon-knobs": "^3.3.11",
    "@storybook/addon-links": "^3.3.11",
    "@storybook/addon-options": "^3.3.11",
    "@storybook/addons": "^3.3.11",
    "@storybook/react": "^3.3.11",
    "@storybook/storybook-deployer": "^2.2.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.1.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "eslint-watch": "^3.1.3",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "jest-emotion": "^9.0.0-0",
    "jest-enzyme": "^4.1.1",
    "lint-staged": "^6.1.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./config/setupTests.js",
    "collectCoverage": true,
    "collectCoverageFrom": ["lib/**", "!lib/index.js", "!lib/**/*.stories.js"],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleDirectories": ["node_modules", "./"]
  },
  "lint-staged": {
      "*.{js}": ["run-s lint --fix test:clean test test:coverage:report", "git add"]
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "emotion": "^8.0.12",
    "emotion-theming": "^8.0.12",
    "polished": "^1.9.0",
    "react-emotion": "^8.0.12"
  }
}
