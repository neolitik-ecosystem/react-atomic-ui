{
  "name": "react-atomic-ui",
  "version": "0.1.0",
  "description": "Lightweight React library based on Atomic design concept",
  "main": "build/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "babel lib -d build",
    "build:watch": "babel lib -w -d build",
    "lint": "eslint lib/** test/**",
    "lint:watch": "esw -w lib/** test/**",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "review": "run-s lint test:clean test test:coverage:report",
    "test": "jest",
    "test:clean": "rimraf ./coverage",
    "test:watch": "jest --watch",
    "test:watchAll": "jest --watchAll",
    "test:coverage:report": "open ./coverage/lcov-report/index.html",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "author":
    "David Ouanounou <david@ouanounou.fr> (https://github.com/davidouanounou)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neolitik-ecosystem/react-atomic-ui.git"
  },
  "bugs": {
    "url": "https://github.com/neolitik-ecosystem/react-atomic-ui.git/issues"
  },
  "homepage":
    "https://github.com/neolitik-ecosystem/react-atomic-ui.git#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.14.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-watch": "^3.1.3",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.2",
    "react": "^16.2.0",
    "rimraf": "^2.6.2",
    "@storybook/react": "^3.3.11",
    "@storybook/addon-actions": "^3.3.11",
    "@storybook/addon-info": "^3.3.11",
    "@storybook/addon-knobs": "^3.3.11",
    "@storybook/addon-links": "^3.3.11",
    "@storybook/addon-options": "^3.3.11",
    "@storybook/addons": "^3.3.11",
    "@storybook/storybook-deployer": "^2.2.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": ["lib/**", "!lib/index.js"],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleDirectories": ["node_modules", "./"]
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "dependencies": {
    "babel-plugin-emotion": "^8.0.12",
    "emotion": "^8.0.12",
    "react-emotion": "^8.0.12"
  }
}
